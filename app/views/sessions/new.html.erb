<h1>Log in</h1>
<%= form_tag sessions_path, :class =>"form-horizontal" do %>
	<div class="field">
		<%= label_tag :username %>
		<%= text_field_tag :username, params[:username] %>
	</div>
	<div class="field">
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div class="field">
		<%= check_box_tag :remember_me, 1, params[:remember_me], :class=>"checkbox" %>
		<%= label_tag :remember_me %>
	</div>
	<div class="actions"><%= submit_tag "Log in", :class=>"btn btn-primary" %>
	</div>
<% end %>
